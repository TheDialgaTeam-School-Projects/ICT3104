
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >
<com.google.android.gms.maps.MapView    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    tools:context=".HomeFragment"
    android:name="com.google.android.gms.maps.SupportMapFragment"/>

<TextView
    android:id="@+id/tvSpinner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/nearbyPlaces"
    android:layout_toStartOf="@id/tvSpinner"
    android:layout_alignParentStart="true"
    android:layout_alignBottom="@id/spinnerNearby"
    android:layout_alignParentTop="true"
    android:background="@color/common_google_signin_btn_text_dark_pressed"/>

<Spinner
    android:id="@+id/spinnerNearby"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@id/tvSpinner"
    android:layout_alignParentEnd="true" />

<Button
    android:id="@+id/btnStartActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:text="@string/startJourney"
    android:layout_above="@+id/btnOpenARNavigation"/>
<Button
    android:id="@+id/btnOpenARNavigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:text="@string/arNavigation"
    android:layout_alignParentBottom="true"  />


</RelativeLayout>