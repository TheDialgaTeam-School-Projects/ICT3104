
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >
<com.google.android.gms.maps.MapView    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map"
    tools:context="edu.singaporetech.ict3104.project.MapFragment"/>

<Button
    android:id="@+id/btnStartRoute"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal|center_vertical"
    android:text="@string/startRoute"
    android:layout_alignParentEnd="true"/>

<Button
    android:id="@+id/btnReset"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/circular_button_with_state_change"
    android:gravity="center_horizontal|center_vertical"
    android:text="@string/resetMap"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"/>

<Button
    android:id="@+id/btnOpenARNavigation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/circular_button_with_state_change"
    android:gravity="center_horizontal|center_vertical"
    android:layout_alignParentEnd="true"
    android:text="@string/arNavigation"
    android:layout_alignParentBottom="true"  />


</RelativeLayout>